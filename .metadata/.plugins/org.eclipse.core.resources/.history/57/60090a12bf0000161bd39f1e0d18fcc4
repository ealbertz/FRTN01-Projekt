package IOtester;

import java.io.*;
import java.net.*;
import org.apache.commons.lang3.SerializationUtils;
import communication.ProcessInput;

public class IOtest {
	
	// Ska skicka in hastighets och referens v√§rden. 

	public static void main(String[] args) throws Exception {
		System.in.read();
		
		DatagramSocket clientSocket = new DatagramSocket();
		InetAddress IPAddress = InetAddress.getByName("localhost");
		byte[] sendData = new byte[1024];
		byte[] receiveData = new byte[1024];
		ProcessInput input= new ProcessInput(1,2);
		sendData = input.getBytes();
		DatagramPacket sendPacket = new DatagramPacket(sendData, sendData.length, IPAddress, 9880);
		clientSocket.send(sendPacket);
		System.out.println("Sent: vel=1, pos=2");
		DatagramPacket receivePacket = new DatagramPacket(receiveData, receiveData.length);
		clientSocket.receive(receivePacket);
		ProcessInput reply = (ProcessInput)SerializationUtils.deserialize(receivePacket.getData());
		System.out.println("Reply vel: "+reply.getVel()+ " Reply pos: "+reply.getPos());
		clientSocket.close();
	}
}
